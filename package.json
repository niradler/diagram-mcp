{
  "name": "diagram-mcp",
  "version": "0.0.1",
  "description": "MCP server for rendering Mermaid diagrams and converting to images",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:mcp": "node test-mcp-client.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "diagram",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "puppeteer": "^24.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}