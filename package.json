{
  "name": "diagram-mcp",
  "version": "0.0.2",
  "description": "MCP server for rendering Mermaid diagrams and converting to images",
  "main": "dist/index.js",
  "bin": {
    "diagram-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:mcp": "node test-mcp-client.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "prepublishOnly": "npm run build",
    "docker:build": "docker build -t diagram-mcp .",
    "docker:run": "docker run -p 3000:3000 diagram-mcp"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "diagram",
    "model-context-protocol",
    "plotly",
    "charts",
    "svg",
    "png",
    "pdf"
  ],
  "author": "Nir Adler",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "puppeteer": "^24.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niradler/diagram-mcp.git"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/niradler/diagram-mcp/issues"
  },
  "homepage": "https://github.com/niradler/diagram-mcp#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}